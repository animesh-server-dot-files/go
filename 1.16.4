#%Module1.0#####################################################################
##
## Program modulefile
##
proc ModulesHelp { } {
        global version prefix program pkg_prefix

        puts stderr "\t$program version: $version"
        puts stderr "\t$program Prefix: $prefix"
        puts stderr "\t$program Package Prefix: $pkg_prefix"
}

# for Tcl script use only
set program             Golang  
set     version         1.16.4
set     prefix          $env(MODULE_PREFIX)/modules/go/v${version}/source
set     pkg_prefix      $env(MODULE_PREFIX)/modules/go/v${version}/package

module-whatis   "$program version: $version"

setenv  GOROOT  $prefix/
setenv  GOPATH  $pkg_prefix/
prepend-path    PATH                    $prefix/bin
prepend-path    LD_LIBRARY_PATH $prefix/lib
prepend-path    LIBPATH                 $prefix/lib
prepend-path    MANPATH                 $prefix/share/man
prepend-path    PATH                    $pkg_prefix/bin
prepend-path    LD_LIBRARY_PATH $pkg_prefix/lib
prepend-path    LIBPATH                 $pkg_prefix/lib
prepend-path    MANPATH                 $pkg_prefix/share/man 
